int[] CHcolors = { Color.parseColor(_cor1), Color.parseColor(_cor2) }; android.graphics.drawable.GradientDrawable CRNPA = new android.graphics.drawable.GradientDrawable(android.graphics.drawable.GradientDrawable.Orientation.RIGHT_LEFT, CHcolors);

CRNPA.setCornerRadius((float)_radius);
CRNPA.setStroke((int)_borderstroke, Color.parseColor(_strokecolor));

_view.setElevation((float)_elevation);
_view.setBackground(CRNPA);


